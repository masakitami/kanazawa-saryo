  <!-- 体験ー -->

  <!-- スペーサー-->
  <div class="pb-c-gutter-y" aria-hidden="true"></div>
  <!-- スペーサー -->

  <!-- お茶飲み体験ー -->
  <section id="tea">
    <div
      class="c-grid px-c-gutter-x max-lg:grid-rows-[1fr,auto,1fr] max-lg:gap-y-[3em]"
    >
      <figure
        class="col-span-12 col-start-1 -ml-c-gutter-x aspect-[340/160] max-md:row-span-1 max-md:row-start-2 max-md:self-center max-md:pr-[4vw] lg:col-span-11 lg:aspect-[1397/456]"
