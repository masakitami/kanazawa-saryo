          <picture>
            <source
              srcset="/images/tea-menu-sp.svg"
              media="(max-width: 1023px)"
            />
            <source srcset="/images/tea-menu.svg" media="(min-width: 1024px)" />
            <img src="tea-menu.svg" class="size-full" alt="カフェメニュー" />
          </picture>
        </figure>
      </div>
